<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_background"
    tools:context=".StudentAnnouncementDetail">

    <TextView
        android:id="@+id/StdtextView"
        android:layout_width="412dp"
        android:layout_height="89dp"
        android:background="#673AB7"
        android:gravity="center"
        android:text="Announcement Details"
        android:textColor="#FAFAFA"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/StdTitleAnnounce"
        android:layout_width="389dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:text="Title"
        android:textColor="#F4F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StdtextView" />

    <TextView
        android:id="@+id/StdPoster"
        android:layout_width="389dp"
        android:layout_height="55dp"
        android:text="Posted By"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StdTitleAnnounce" />

    <TextView
        android:id="@+id/StdContent"
        android:layout_width="415dp"
        android:layout_height="326dp"
        android:background="@drawable/student_background"
        android:inputType="textMultiLine"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StdTimePost" />

    <TextView
        android:id="@+id/StdTimePost"
        android:layout_width="394dp"
        android:layout_height="53dp"
        android:text="Time Posted"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StdPoster" />

    <Button
        android:id="@+id/Stdbutton14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onClickStudentAnnounceDetailGoBack"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StdContent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>